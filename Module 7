from datetime import timedelta
from datetime import datetime
import sys


# 1
data = datetime.now()
print("{0}\t{1}".format(data, data))

# 2
d = timedelta(days = 730, seconds = -60)
print(d)

# 3
d = timedelta(days = 100, hours = 10, minutes = 13)
print(d)

# 4

# Get current date
datetime_object = datetime.now()
print(datetime_object)
print('Type :- ', type(datetime_object))

foot = 2430
inches = 4

def funk(feet, inch, time):
    a = feet
    b = inch
    c = time
    print("The time is", c, "Your destination is", a, "Feet, and", b, "inches ahead, to your left")

funk(foot, inches, datetime_object)
